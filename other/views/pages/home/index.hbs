<!-- home Featured Categories -->
<section class='py-6'>
  <div class='px-3'>
    <div class='flex items-center justify-between gap-x-5 mb-11'>
      <div class='sm:flex gap-x-7 items-end max-w-[850px]'>
        <h3 class='text-3xl text-gray-blck font-bold font-quicksand'>Featured Categories</h3>
        <ul class='flex flex-wrap gap-x-7'>
          {{#each categoriFilter}}
            <li
              class='text-base font-semibold font-quicksand text-gray-blck hover:text-green-grn hover:-translate-y-1 transition-transform duration-300'
            >
              <a href='#'>{{name}}</a>
            </li>
          {{/each}}
        </ul>
      </div>
      <div class='hidden sm:flex gap-5'>
        <span
          id='home-left'
          class='btn-prev-cate transition-all w-10 h-10 !flex items-center justify-center duration-500 ease-in-out after:!content-none bg-gray-300 hover:bg-green-grn hover:text-white p-2 rounded-full cursor-pointer'
