        <span
          id='home-right'
          class='btn-next-cate transition-all w-10 h-10 !flex items-center justify-center duration-500 ease-in-out after:!content-none bg-gray-300 hover:bg-green-grn hover:text-white p-2 rounded-full cursor-pointer'
        ><i class='fas fa-chevron-right'></i></span>
      </div>
    </div>
    <div class='swiper mySwiper-cate mb-5 w-full h-[180px]'>
      <div class='swiper-wrapper w-full'>
        {{#each categories}}
          <div class='swiper-slide'>
            <div
              class='w-full rounded-lg border hover:border-[#bce3c9] transition-transform duration-700 h-full mx-auto flex flex-col items-center justify-between py-4 bg-[#f2fce4]'
            >
              <figure class='w-20 h-20 mx-auto mb-2'>
                <a href='#'><img
                    src='{{image}}'
                    alt=''
                    class='object-cover hover:scale-110 transition-transform duration-700'
                  /></a>
              </figure>
              <div class='flex flex-col items-center'>
                <h6 class='text-gray-blck text-base font-quicksand font-bold hover:text-green-grn'>
                  <a href=''>{{name}}</a>
                </h6>
                <span class='text-sm text-gray-7e'>{{countProds}}</span>
              </div>
            </div>
          </div>
        {{/each}}
      <div class='swiper-pagination'></div>
    </div>
  </div>
</section>
