<!-- home Popular Products -->
<section class='py-6'>
<div class='px-3'>
  <div class='flex flex-col sm:flex-row sm:items-center justify-between gap-5 mb-11'>
    <h3 class='text-3xl text-gray-blck font-bold font-quicksand'>Popular Products</h3>
    <ul class='flex flex-wrap gap-7'>
      <li
        class='text-base font-semibold font-quicksand text-green-grn hover:-translate-y-1 transition-transform duration-300'
      >
        <button>All</button>
      </li>
      {{#each categoriFilter}}
        <li
          class='text-base font-semibold font-quicksand text-gray-blck hover:text-green-grn hover:-translate-y-1 transition-transform duration-300'
        >
          <button>{{name}}</button>
        </li>
      {{/each}}
    </ul>
  </div>

  <div>
    <div class='w-full grid lg:grid-cols-5 md:grid-cols-3 sm:grid-cols-2 gap-5'>

      {{#each products}}
        <div class='border hover:border-green-ligrn rounded-2xl hover:shadow-xls card-product'>
          <div class='p-6'>
            <div class='relative'>

              {{#each this.images}}
                {{#if @index}}
                  <img src={{this}} alt='Product Image' class='default-img' />

                {{else}}
                  <img
                    src={{this}}
                    alt='Product Image'
                    class='hover-img absolute top-0 opacity-0 scale-105 transition-all duration-1000 ease-in'
                  />
                {{/if}}
              {{/each}}

              <div
                class='hover-product_action opacity-0 absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 border border-green-ligrn bg-white flex'
              >
                <div
                  class='product-action_heart w-10 h-10 flex items-center justify-center text-green-grn border-r border-green-ligrn hover:text-yellow-300 relative'
                >
                  <a href='#' class='w-full h-full flex items-center justify-center'><i class='far fa-heart'></i></a>
                  <div class='product-label_heart duration-500 t1 hidden'>
                    <a
                      href='/AddToWishlist'
                      class='absolute left-1/2 -translate-x-1/2 py-2 px-3 bottom-[125%] bg-green-grn text-white z-20 rounded-md text-xs whitespace-nowrap'
                    >Add To Wishlist</a>
                    <div
                      class='w-0 h-0 absolute z-10 bottom-[100%] left-1/2 -translate-x-1/2 border-solid border-x-[10px] border-x-transparent border-t-[10px] border-t-green-grn'
                    ></div>
                    <div class='w-10 h-5 bg-transparent absolute z-10 bottom-full left-1/2 -translate-x-1/2'></div>
                  </div>
                </div>

                <div
                  class='product-action_heart w-10 h-10 flex items-center justify-center text-green-grn border-r border-green-ligrn hover:text-yellow-300 relative'
                >
                  <a href='#' class='w-full h-full flex items-center justify-center'><i class='fas fa-random'></i></a>
                  <div class='product-label_heart duration-500 t1 hidden'>
                    <a
                      href='/Compare'
                      class='absolute left-1/2 -translate-x-1/2 py-2 px-3 bottom-[125%] bg-green-grn text-white z-20 rounded-md text-xs whitespace-nowrap'
                    >Compare</a>
                    <div
                      class='w-0 h-0 absolute z-10 bottom-[100%] left-1/2 -translate-x-1/2 border-solid border-x-[10px] border-x-transparent border-t-[10px] border-t-green-grn'
                    ></div>
                    <div class='w-10 h-5 bg-transparent absolute z-10 bottom-full left-1/2 -translate-x-1/2'></div>
                  </div>
                </div>

                <div
                  class='product-action_heart w-10 h-10 flex items-center justify-center text-green-grn hover:text-yellow-300 relative'
                >
                  <a href='#' class='w-full h-full flex items-center justify-center'><i class='far fa-eye'></i></a>
                  <div class='product-label_heart duration-500 t1 hidden'>
                    <a
                      href='/Quickwview'
                      class='absolute left-1/2 -translate-x-1/2 py-2 px-3 bottom-[125%] bg-green-grn text-white z-20 rounded-md text-xs whitespace-nowrap'
                    >Quick view</a>
                    <div
                      class='w-0 h-0 absolute z-10 bottom-[100%] left-1/2 -translate-x-1/2 border-solid border-x-[10px] border-x-transparent border-t-[10px] border-t-green-grn'
                    ></div>
                    <div class='w-10 h-5 bg-transparent absolute z-10 bottom-full left-1/2 -translate-x-1/2'></div>
                  </div>
                </div>
              </div>
            </div>

            <div class='product-content flex flex-col items-start justify-between'>
              <div class='text-xs font-lato text-gray-ad mb-1 mt-1'><a href=''>{{this.productCategory.name}}</a></div>
              <h2 class='text-gray-blck font-quicksand min-h-[72px] font-bold text-base'>
                <a href=''>{{this.name}}</a>
              </h2>
              <div>
